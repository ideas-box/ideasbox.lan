FROM debian:jessie-slim

ENV LANG C.UTF-8

RUN apt update

# Install our dependencies
RUN apt install -y --no-install-recommends \
	autoconf \
	automake \
	cython3 \
	gcc \
	git \
	libdbus-glib-1-dev \
	libjpeg-dev \
	libtool \
	libxml2-dev \
	libxslt1-dev \
	make \
	python3 \
	python3-dev \
	python3-pip \
	python3-setuptools \
	python3-virtualenv \
	python3-wheel \
	virtualenv \
	zlib1g-dev

# Make some space
RUN rm -fr \
	/usr/share/doc/* \
	/var/cache/debconf/* \
	/var/lib/apt/lists/*

# Add a user to run the CI as
RUN useradd --create-home ideascube
USER ideascube
WORKDIR /home/ideascube

# Unfortunately pew is not in Debian Jessie
RUN pip3 install --user appdirs packaging
RUN pip3 install --user pew
ENV PATH="~/.local/bin:${PATH}"

# Create a virtual environment to use in the CI
RUN ~/.local/bin/pew new -d -p python3 venv

# Pre-install the dependencies in the virtual environment
RUN git clone https://framagit.org/ideascube/ideascube
RUN ~/.local/bin/pew in venv make -C ideascube develop
RUN rm -fr ideascube
